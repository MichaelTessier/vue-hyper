{
  "prettier.configPath": ".prettierrc",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "cSpell.words": [
    "codegen",
    "commitlint",
    "composables",
    "histoire",
    "pinia",
    "stylelint",
    "supabase",
    "unocss",
    "unplugin",
    "urql",
    "Vercel",
    "vuejs"
  ],
  "i18n-ally.localesPaths": ["src/**/i18n/messages", "coverage/src/i18n"]
}
